<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mahardikanila"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mahardikanila.quiz1a.Mahardikanila">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/download_icon"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/shampo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/cal_view"
        android:id="@+id/calview"
        android:layout_alignTop="@+id/shampo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textColor="#ffff"
        android:id="@+id/textView4"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignTop="@+id/calview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#000"
        android:paddingLeft="2dp"
        android:textSize="40dp"
        android:id="@+id/textView5"
        android:layout_marginTop="9dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignBottom="@+id/calview"
        android:layout_below="@+id/textView4"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/cal_icon"
        android:id="@+id/calicon"
        android:layout_alignBottom="@+id/calview"
        android:layout_toRightOf="@+id/calview"
        android:layout_toEndOf="@+id/calview"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:text="10/05/2016"
        android:textColor="#FFFF0000"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/calicon"
        android:layout_toRightOf="@+id/calicon"
        android:layout_toEndOf="@+id/calicon"/>

    <Button
        android:text="Detail"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="#FFF9F34F"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="Memperbaiki daftar nilai harga promo (Shampo lifeboy)"
        android:textColor="#000"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:id="@+id/shampo"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/calicon"
        android:layout_alignStart="@+id/calicon"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"/>

    <TextView
        android:text="Deskripsi tugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deskripsi"
        android:layout_below="@+id/shampo"
        android:layout_alignLeft="@+id/shampo"
        android:layout_alignStart="@+id/shampo"/>

</RelativeLayout>
